@model OnlineShop.Models.Review

@{
    ViewBag.Titlu = "Adaugare review";
}


<h2>@ViewBag.Titlu</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Reviewuri", method: FormMethod.Post))
{
    @Html.Label("Continut", "Continut review")
    <br />

    @Html.TextBox("Continut", null, new { @class = "form-control" })

    @Html.ValidationMessageFor(m => m.Continut, null, new { @class = "text-danger" })
    <br />
    <br />


    <button class="btn btn-success" type="submit">Adauga un review</button>
}
